{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs","declaration": true, 
        "downlevelIteration": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "packages"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "types"
    ]
}